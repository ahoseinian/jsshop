doctype html
html(ng-app="myApp")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(http-equiv="x-ua-compatible", content="ie=edge")
    title= title
    each file in assets.main.css
      link(rel='stylesheet', href= file)
  body
    .container
      nav.navbar.navbar-light.bg-faded.m-b-1
        button.navbar-toggler.hidden-sm-up(type="button", data-toggle="collapse", data-target="#exCollapsingNavbar") &#9776;
        #exCollapsingNavbar.collapse.navbar-toggleable-xs
          a.navbar-brand(ui-sref='home', ui-sref-active="active") فروشگاه
          ul.nav.navbar-nav
            each cat in cats
              li.nav-item
                a.nav-link(ui-sref='categories({name: \''+cat.name+'\'})', ui-sref-active="active")= cat.name

            .pull-xs-left
              if !user
                li.nav-item
                  a.nav-link(ui-sref='auth', ui-sref-active="active") ورود / ثبت نام
              else
                li.nav-item.dropdown
                  a.nav-link.dropdown-toggle(data-toggle="dropdown", href="#", role="button", aria-haspopup="true", aria-expanded="false")
                    = user.fullname

                  .dropdown-menu
                    a.dropdown-item(href="/auth/logout")
                      span.fa.fa-sign-out
                      span خروج
                    if user.seller
                      .dropdown-divider
                      a.dropdown-item(href="/panel") 
                        span.fa.fa-user
                        span پنل کاربری

                    else if user.admin
                      .dropdown-divider
                      a.dropdown-item(href="/admin")
                        span.fa.fa-user
                        span پنل ادمین




      block content
  

    each file in assets.main.js
      script(src= file)
    each file in assets.main.jspublic
      script(src= file)
