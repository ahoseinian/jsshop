doctype html
html(ng-app="myApp")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(http-equiv="x-ua-compatible", content="ie=edge")
    title= title
    each file in assets.main.css
      link(rel='stylesheet', href= file)
  body
    .container
      nav.navbar.navbar-light.bg-faded.m-b-1
        button.navbar-toggler.hidden-sm-up(type="button", data-toggle="collapse", data-target="#exCollapsingNavbar") &#9776;
        #exCollapsingNavbar.collapse.navbar-toggleable-xs
          a.navbar-brand(href='#') سالار
          ul.nav.navbar-nav
            li.nav-item
              a.nav-link(ui-sref='home', ui-sref-active="active") خانه 
            //- li.nav-item
            //-   a.nav-link(ui-sref='models', ui-sref-active="active") دسته بندی

            if !user
              li.nav-item
                a.nav-link(ui-sref='auth', ui-sref-active="active") ورود / ثبت نام
            else
              li.nav-item.dropdown
                a.nav-link.dropdown-toggle(data-toggle="dropdown", href="#", role="button", aria-haspopup="true", aria-expanded="false")= user.fullname
                .dropdown-menu
                  a.dropdown-item(href="/auth/logout") خروج

          form.form-inline.navbar-form.pull-md-left
            input.form-control(type='text', placeholder='جستجو')
            //- button.btn.btn-success-outline(type='submit') جستجو

      block content
  

    each file in assets.main.js
      script(src= file)

